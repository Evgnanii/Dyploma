<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity">

    <EditText
        android:layout_width="550dp"
        android:layout_height="250dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/player3"
        android:name="com.example.dyploma.activities.fragments.ChooseRoleFragment$PlayerFragment"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"></fragment>

    <fragment
        android:id="@+id/player2"
        android:name="com.example.dyploma.activities.fragments.ChooseRoleFragment$PlayerFragment"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/player3"></fragment>

    <fragment
        android:id="@+id/player1"
        android:name="com.example.dyploma.activities.fragments.ChooseRoleFragment$PlayerFragment"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/player2"></fragment>

    <fragment
        android:id="@+id/presenter"
        android:name="com.example.dyploma.activities.fragments.ChooseRoleFragment$PlayerFragment"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></fragment>

</androidx.constraintlayout.widget.ConstraintLayout>