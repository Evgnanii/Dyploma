<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="80dp"
    tools:context=".activities.fragments.ChooseRoleFragment$PlayerFragment"
    android:background="@drawable/button">

    <ImageView
        android:id="@+id/player_icon"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player"
        android:textColor="@color/text_color"
        android:fontFamily="@font/font1"
        android:textSize="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_icon"></TextView>

